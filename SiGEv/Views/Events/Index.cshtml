@model IEnumerable<SiGEv.Models.Event>

@{
    ViewData["Title"] = "Eventos";
}

<h6>Seleção de eventos</h6>
<h1>@ViewData["Title"]</h1>


<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue.Adress)
            </th>
			 <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
			<th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(x => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Venue.Adress)
                </td>
				<td>
                    @Html.DisplayFor(x => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(x => item.Date)
                </td>
				<td>
					<div class="btn-group btn-group-sm" role="group" aria-label="Basic outlined example">
						<a class="btn btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
						<a class="btn btn-outline-primary" asp-action="Buy" asp-route-id="@item.Id">Comprar</a>
					</div>
                </td>
            </tr>
        }
    </tbody>
</table>
